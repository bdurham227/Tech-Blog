<div class="card">
  <div class="card-header">Edit Post</div>
<form class="card-body">
  <label for="post-title">Title</label>
  <input name="post-title" type="text" class="form-input" value="{{post.post_title}}"/>

  <label for="post-content">Content</label>
  <input name="post-content" type="text" class="form-input" value="{{post.post_content}}"/>

  <button type="submit" class="btn btn-primary">Update Post</button>

  <button type="button" class="btn btn-danger">Delete Post</button>

</form>
</div>

